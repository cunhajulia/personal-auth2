        </div>
        <div class="col-sm-6">
          <h3>Recipes</h3>
          <ul class="recipes">
          <% for(var i=0; i<recipes.length; i++) {%>
            <li class="recipes">
              <span><%= recipes[i].recipeName %></span>
              <span><%= recipes[i].description %></span>
              <span><%= recipes[i].ingredients %></span>
              <span><button class= "fa fa-trash" type="button">Delete Recipe</button></span>
            </li>
          <% } %>
          </ul>

          <h2>Add a new recipe</h2>
        <% if (user.local.email) { %>
          <form action="/recipes" method="POST">
            <input type="text" name="recipeName" placeholder="Enter recipe name here">
            <label for="description">Recipe Description:</label>
            <textarea id="description" name="description" rows="5" cols="33">Enter recipe description here</textarea>
            <label for="ingredients">Recipe Ingredients:</label>
            <textarea id="ingredients" name="ingredients" rows="5" cols="33">Enter recipe ingredients here</textarea>
            <button type="submit">Submit</button>
          </form>
        </div>
        <% } %>

</div>

<script src="main.js"></script>

</body>
</html>
